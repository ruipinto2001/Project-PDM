<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Application theme -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/white</item> <!-- Object background -->
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item> <!-- Object text -->
        <!-- Secondary brand color (where is this used???) -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color (top bar: battery level, time, etc.) -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Custom colors -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <!-- EditText underline -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>
</resources>